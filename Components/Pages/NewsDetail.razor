@page "/news/{Id}"

@using GooruuSearchApp.Models
@using GooruuSearchApp.Services
@rendermode InteractiveServer
@inject MockSearchService SearchService
@inject NavigationManager NavManager
@using GooruuSearchApp.Components.Layout
@layout BlankLayout
<PageTitle>@(article?.Title ?? "Page Not Found")</PageTitle>

@if (article == null)
{
    <div style="text-align:center; padding:50px;">
        <h2>404 - ไม่พบหน้าที่ต้องการ</h2>
        <a href="/">กลับไปค้นหาใหม่</a>
    </div>
}
else
{
    @* ================================================================================= *@
    @* 1. WEBPAGE 1: TIMELINE (The Chronical) *@
    @* บริบท: เชนพิมพ์ "ข่าวฆาตกรรม" -> เจอหน้านี้หน้าแรก *@
    @* ================================================================================= *@
    @if (article.Id == "timeline-killer-20")
    {
        <div class="prop-timeline-wrapper" style="background-color: #f4f4f4; min-height: 100vh; padding-bottom: 50px; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;">
            <header style="background: #1a1a1a; color: white; padding: 15px 0; border-bottom: 4px solid #d9534f;">
                <div class="container" style="max-width: 800px; margin: 0 auto; display: flex; justify-content: space-between; align-items: center; padding: 0 20px;">
                    <div style="font-size: 1.5rem; font-weight: bold; letter-spacing: 1px;">THE CHRONICAL</div>
                    <div style="font-size: 0.8rem; color: #ccc;">THE TRUTH BETWEEN LINES.</div>
                </div>
            </header>

            <main style="max-width: 800px; margin: 30px auto; background: white; padding: 40px; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
                <div style="font-size: 0.8rem; color: #d9534f; margin-bottom: 10px; text-transform: uppercase; font-weight: bold;">
                    CRIME > INVESTIGATIVE > SERIAL KILLER
                </div>

                <article class="article-content" style="line-height: 1.8; color: #333; font-size: 1.1rem;">
                    @((MarkupString)article.FullContent)
                </article>

                <div style="margin-top: 50px; border-top: 1px solid #eee; padding-top: 20px; font-size: 0.9rem; color: #999;">
                    © 2026 THE CHRONICAL - All rights reserved.
                </div>
            </main>
        </div>
    }

    @* ================================================================================= *@
    @* 2. WEBPAGE 2: THAI NEWS (น่าสนใจ.คอม) *@
    @* บริบท: เชนพิมพ์ "ข่าวฆาตกรรมสัญลักษณ์ 20" (ข่าวแปล) *@
    @* ================================================================================= *@
    else if (article.Id == "news-thai-xx")
    {
        <div class="prop-thai-wrapper" style="background-color: #eef2f5; min-height: 100vh; font-family: 'Sarabun', 'Kanit', sans-serif;">
            <header style="background: linear-gradient(90deg, #0056b3, #004494); color: white; padding: 10px 0;">
                <div class="container" style="max-width: 960px; margin: 0 auto; padding: 0 15px; display: flex; align-items: center;">
                    <div style="font-size: 1.8rem; font-weight: bold; margin-right: 20px;">น่าสนใจ<span style="color:#ffc107">.คอม</span></div>
                    <nav style="display: flex; gap: 15px; font-size: 0.9rem;">
                        <span>หน้าแรก</span>
                        <span>ข่าววันนี้</span>
                        <span style="background: rgba(255,255,255,0.2); padding: 2px 8px; border-radius: 4px;">อาชญากรรม</span>
                        <span>บันเทิง</span>
                    </nav>
                </div>
            </header>

            <main style="max-width: 960px; margin: 20px auto; display: flex; gap: 20px; padding: 0 15px;">
                <div style="flex: 3; background: white; padding: 30px; border-radius: 4px; border-top: 5px solid #ffc107; box-shadow: 0 2px 5px rgba(0,0,0,0.05);">

                    <article class="thai-article-body" style="font-size: 1.15rem; line-height: 1.7; color: #222;">
                        @((MarkupString)article.FullContent)
                    </article>

                    <div style="margin-top: 30px; display: flex; gap: 10px;">
                        <button style="background: #3b5998; color: white; border: none; padding: 8px 15px; border-radius: 3px;">Facebook</button>
                        <button style="background: #00aced; color: white; border: none; padding: 8px 15px; border-radius: 3px;">Twitter</button>
                        <button style="background: #00c300; color: white; border: none; padding: 8px 15px; border-radius: 3px;">Line</button>
                    </div>
                </div>

                <aside style="flex: 1; display: flex; flex-direction: column; gap: 20px;">
                    <div style="background: white; padding: 15px; border-radius: 4px;">
                        <h4 style="margin-top: 0; color: #0056b3;">ข่าวล่าสุด</h4>
                        <ul style="padding-left: 20px; font-size: 0.9rem; color: #555;">
                            <li style="margin-bottom: 10px;">ชาวบ้านตื่น! พบงูยักษ์คำชะโนด</li>
                            <li style="margin-bottom: 10px;">ราคาทองวันนี้พุ่ง 300 บาท</li>
                            <li>ปิดตำนานร้านดังย่านสยาม</li>
                        </ul>
                    </div>
                </aside>
            </main>
        </div>
    }

    @* ================================================================================= *@
    @* 3. WEBPAGE 3: ENGLISH NEWS (Texus Daily) *@
    @* บริบท: เชนพิมพ์ "Murder XX 2005 New" (ข่าวต้นฉบับ) *@
    @* ================================================================================= *@
    else if (article.Id == "news-english-xx")
    {
        <div class="prop-eng-wrapper" style="background-color: #fff; min-height: 100vh; font-family: 'Georgia', 'Times New Roman', serif; color: #111;">
            <header style="border-bottom: 1px solid #000; padding: 20px 0; text-align: center; margin-bottom: 30px;">
                <div style="font-family: 'Times New Roman', serif; font-size: 3.5rem; font-weight: bold; letter-spacing: -1px; line-height: 1;">Texus Daily</div>
                <div style="margin-top: 10px; border-top: 1px solid #ccc; border-bottom: 1px solid #ccc; padding: 5px 0; font-family: sans-serif; font-size: 0.8rem; text-transform: uppercase;">
                    Wednesday, December 21, 2005 | Vol. 124 No. 302 | Price $1.00
                </div>
            </header>

            <main style="max-width: 700px; margin: 0 auto; padding: 0 20px;">

                <article class="eng-article-body" style="font-size: 1.2rem; line-height: 1.6; text-align: justify;">
                    @((MarkupString)article.FullContent)
                </article>

            </main>

            <footer style="margin-top: 50px; border-top: 3px double #000; padding: 30px; text-align: center; font-family: sans-serif; font-size: 0.8rem; color: #666;">
                Texus Daily Online Archive - 2005
            </footer>
        </div>
    }
    else
    {
        
    
        // --- THEME 1: CRIME NEWS ---
    @if (article.Type == "news" || article.Type == "official")
    {
        <div class="theme-crime">
            <nav class="news-navbar">
                <div class="nav-content">
                    <div class="brand">DAILY CRIME</div>
                    <div style="color:#666; font-size:1.2rem;">
                        <span class="material-icons">share</span>
                        <span class="material-icons" style="margin-left:10px">bookmark_border</span>
                    </div>
                </div>
            </nav>

            <div class="news-container">
                <main class="news-main">
                    <h1 class="news-headline">@article.Title</h1>
                    <div class="news-meta">
                        <span style="color:#c62828;">อาชญากรรม</span>
                        <span>•</span>
                        <span>@article.Date</span>
                        <span>•</span>
                        <span>อ่าน 24k ครั้ง</span>
                    </div>

                    <img src="@article.ImageUrl" class="news-hero-img" />

                    <div class="news-body">
                        @((MarkupString)article.FullContent)
                    </div>
                </main>

                <aside>
                    <div class="hot-news">
                        <h4 style="margin-top:0;">ข่าวที่เกี่ยวข้อง</h4>
                        <hr style="border:0; border-top:1px solid #eee; margin:15px 0;">
                        <div style="margin-bottom:15px; font-size:0.95rem; cursor:pointer;">
                            👉 สรุปคำให้การพยานปากเอก...
                        </div>
                        <div style="margin-bottom:15px; font-size:0.95rem; cursor:pointer;">
                            👉 เปิดประวัติผู้ตาย ทายาทพันล้าน...
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    }

    // --- THEME 2: FORUM ---
    else if (article.Type == "forum")
    {
        <div class="forum-wrapper">
            <div class="forum-container">
                <span class="topic-tag">กระทู้แนะนำ 🌟</span>

                <h1 class="forum-title">@article.Title</h1>

                <div class="user-profile">
                    <div class="avatar">P</div>
                    <div>
                        <div style="font-weight:bold;">Pantip_User77</div>
                        <div style="font-size:0.8rem; color:#666;">@article.Date</div>
                    </div>
                </div>

                <hr style="border:0; border-top:1px solid #eee; margin:20px 0;">

                <div class="news-body" style="font-size:1.1rem;">
                    @((MarkupString)article.FullContent)
                </div>

                <br>
                <img src="@article.ImageUrl" style="max-width:100%; border-radius:8px;" />

                <div style="margin-top:50px;">
                    <h3 style="color:#1a1a1b;">ความคิดเห็น (12)</h3>

                    <div class="comment-item">
                        <div class="user-profile" style="margin-bottom:10px;">
                            <div class="avatar" style="background:#2196f3; width:30px; height:30px; font-size:0.8rem;">A</div>
                            <b style="font-size:0.9rem;">Anonymous_Duck</b>
                        </div>
                        <p style="margin:0; color:#333;">อ่านแล้วขนลุกเลยครับ แถวบ้านผมเอง!</p>
                    </div>

                    <div class="comment-item">
                        <div class="user-profile" style="margin-bottom:10px;">
                            <div class="avatar" style="background:#4caf50; width:30px; height:30px; font-size:0.8rem;">K</div>
                            <b style="font-size:0.9rem;">Khun_Detective</b>
                        </div>
                        <p style="margin:0; color:#333;">เรื่องนี้มีเงื่อนงำ รอติดตามตอนต่อไปครับ 🤔</p>
                    </div>
                </div>
            </div>
        </div>
    }

    // --- THEME 3: GOSSIP ---
    else if (article.Type == "gossip")
    {
        <div class="gossip-wrapper">
            <div class="glass-card">
                <div style="font-size:3rem; margin-bottom:-10px;">💋 ✨ 🔥</div>
                <h1 class="gossip-title">@article.Title</h1>

                <img src="@article.ImageUrl" class="gossip-img" />

                <div style="font-size:1.4rem; line-height:1.6; color:#444; margin-top:30px;">
                    @((MarkupString)article.FullContent)
                </div>

                <button style="margin-top:30px; background:#ff4081; color:white; border:none; padding:15px 40px; font-size:1.5rem; border-radius:50px; font-family:'Mali'; cursor:pointer; box-shadow:0 10px 20px rgba(255, 64, 129, 0.4);">
                    แชร์ให้โลกรู้! 📢
                </button>
            </div>
        </div>
    }

    // --- THEME 4: DARK WEB ---
    else if (article.Type == "dark")
    {
        <div class="dark-theme-wrapper">
            <div class="scanlines"></div> <div class="terminal-window">
                <div class="terminal-header">
                    <span>ROOT@SYSTEM:~/SECRETS</span>
                    <span>ENCRYPTED_Connection: TRUE</span>
                </div>

                <h1 class="hacker-text glitch-effect" style="text-transform:uppercase; border-bottom:1px dashed #00ff41; padding-bottom:15px;">
                    @article.Title
                </h1>

                <div class="hacker-text" style="margin-top:20px; font-size:1.1rem;">
                    @((MarkupString)article.FullContent)
                </div>

                <br><br>
                <div style="border:1px solid red; color:red; padding:10px; display:inline-block;">
                    WARNING: TRACE DETECTED... 89%
                </div>
            </div>
        </div>
    }
    }
}

@code {
    [Parameter]
    public string Id { get; set; }

    private SearchResult? article;

    protected override void OnParametersSet()
    {
        article = SearchService.GetArticle(Id);
    }
}
