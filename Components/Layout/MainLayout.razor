@inherits LayoutComponentBase

<div class="google-layout-container">

    <header class="google-header">
        <a href="#" class="header-link">Gmail</a>
        <a href="#" class="header-link">ค้นรูป</a>

        <div class="icon-btn" title="แอป Google">
            <span class="material-icons">apps</span>
        </div>

        <div class="user-avatar" title="บัญชี Gooruu">
            <span>S</span>
        </div>
    </header>

    <main class="google-main">
        @Body
    </main>

    <footer class="google-footer">
        <div class="footer-row country-row">
            <span>ไทย</span>
        </div>

        <div class="footer-row links-row">
            <div class="footer-left">
                <a href="#">เกี่ยวกับ</a>
                <a href="#">โฆษณา</a>
                <a href="#">ธุรกิจ</a>
                <a href="#">วิธีการทำงานของ Gooruu</a>
            </div>
            <div class="footer-right">
                <a href="#">ความเป็นส่วนตัว</a>
                <a href="#">ข้อกำหนด</a>
                <a href="#">การตั้งค่า</a>
            </div>
        </div>
    </footer>

</div>

<style>
    /* Reset & Base Layout */
    body, html {
        height: 100%;
        margin: 0;
        background-color: #fff;
        font-family: arial, sans-serif;
    }

    .google-layout-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* เต็มความสูงหน้าจอ */
    }

    /* --- Header Style --- */
    .google-header {
        display: flex;
        justify-content: flex-end; /* ชิดขวา */
        align-items: center;
        padding: 15px 20px;
        gap: 15px;
        font-size: 13px;
    }

    .header-link {
        color: #000;
        text-decoration: none;
        opacity: 0.8;
    }

        .header-link:hover {
            text-decoration: underline;
        }

    .icon-btn {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #5f6368;
    }

        .icon-btn:hover {
            background-color: #f0f3f4;
        }

    .user-avatar {
        width: 32px;
        height: 32px;
        background-color: #1a73e8; /* สีน้ำเงิน Google */
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
        cursor: pointer;
    }

    /* --- Main Content Style --- */
    .google-main {
        flex: 1; /* ยืดให้เต็มพื้นที่ เพื่อดัน Footer ลงล่าง */
        display: flex;
        flex-direction: column;
        /* ถ้าหน้า Home คุณจัดกึ่งกลางอยู่แล้ว ตรงนี้ปล่อยว่างได้ หรือใส่เพื่อความชัวร์ */
        /* justify-content: center; */
    }

    /* --- Footer Style --- */
    .google-footer {
        background-color: #f2f2f2;
        color: #70757a;
        font-size: 14px;
        width: 100%;
    }

    .footer-row {
        padding: 15px 30px;
        display: flex;
        flex-wrap: wrap;
        border-bottom: 1px solid #dadce0;
    }

    .country-row {
        font-size: 15px;
        color: #70757a;
        border-bottom: 1px solid #dadce0;
    }

    .links-row {
        justify-content: space-between; /* ซ้ายขวาแยกกัน */
        border-bottom: none;
    }

    .footer-left, .footer-right {
        display: flex;
        gap: 30px;
    }

    .google-footer a {
        color: #70757a;
        text-decoration: none;
        white-space: nowrap;
    }

        .google-footer a:hover {
            text-decoration: underline;
        }

    /* ปรับ Responsive สำหรับจอมือถือ */
    @@media (max-width: 700px) {
        .links-row {
            justify-content: center;
            gap: 20px;
        }

        .footer-left, .footer-right {
            flex-wrap: wrap;
            justify-content: center;
        }
    }
</style>